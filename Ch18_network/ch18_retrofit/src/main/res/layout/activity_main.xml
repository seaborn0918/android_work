<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <!-- 1. https:reqres.in - REST API 테스트 사이트 -->
    <!-- 2. 퍼미션. build.gradle dependency 추가 -->
    <!-- 3. INetworkService, UserModel, UserListModel 만들기-->
    <Button
        android:id="@+id/get_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="get Query 요청"
        android:textSize="20sp" />

    <Button
        android:id="@+id/get_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="get Path 요청"
        android:textSize="20sp" />

    <!-- glide 이용. 이미지 요청하기 -->
    <Button
        android:id="@+id/glide_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Glide test"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/glide_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />


</LinearLayout>